<resources>
    <!-- Base application theme. -->
    <style name="Theme.SeabunnE" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/darkGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/darkGrey</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/paintball</item>
    </style>

    <style name="Theme.SeabunnE.Toolbar">
        <item name="android:fontFamily">@font/paintball</item>
        <item name="android:textSize">@dimen/toolbarSize</item>
    </style>

    <style name="Theme.SeabunnE.NavDrawer">
        <item name="android:fontFamily">@font/splatfont2</item>
        <item name="android:textSize">@dimen/menuSize</item>
    </style>

    <style name="Theme.SeabunnE.NavDrawer.Selected" parent="Theme.SeabunnE.NavDrawer">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>